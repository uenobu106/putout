.container
  .col-md-6.col-md-offset-3.col-sm-10.col-sm-offset-1
    %h1 New Post

    = form_for @post do |f|
      .field
      = f.label :title, "タイトル"
      = f.text_field :title, :id =>"focusedInput",:class =>"form-control"
      .field
      = f.label :content, "内容"
      = f.text_area :content, :id =>"focusedInput", :class =>"form-control"
      .actions.submit
        = f.submit "送信", :class =>"btn btn-default"
